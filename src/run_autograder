#! /usr/bin/env bash

echo "AUTOGRADER SCRIPT"

# Always pull the src from github.
rm -r src/
git clone --depth=1 --branch=master https://github.com/saasbook/gradescope-ci-autograder src
# cp -r gradescope-ci-autograder/src/script/* script/

src/script/pre-install.sh

mkdir -p src/results/
ruby src/script/autograder.rb submission/ > results/results.json
# cp src/results/results.json results/

# rm -rf gradescope-ci-autograder/

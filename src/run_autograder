#! /usr/bin/env bash

echo "AUTOGRADER SCRIPT"

# Always pull the src from github.
rm -r source/
git clone --depth=1 --branch=master https://github.com/saasbook/gradescope-ci-autograder source
# cp -r gradescope-ci-autograder/src/script/* script/

mkdir -p source/results/
ruby source/script/autograder.rb submission/ > results/results.json
# cp source/results/results.json results/

# rm -rf gradescope-ci-autograder/
